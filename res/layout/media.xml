<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="Attach Document"/>
<Button android:id="@+id/btnLaunch" android:layout_height="wrap_content" android:layout_width="200dip" android:layout_gravity="center" android:text="Select Document"></Button>
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imgPhoto"></ImageView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayoutButtons">
    </LinearLayout>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout1">
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content" android:visibility="invisible">
            <Button android:layout_height="wrap_content" android:id="@+id/btnRotLeft" android:layout_width="wrap_content" android:text="Rotate Left"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/btnRotRight" android:text="Rotate Right" android:layout_width="wrap_content" android:layout_marginRight="150px"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:id="@+id/lblTag" android:text="Tag :" android:layout_height="wrap_content"></TextView>
            <Spinner android:id="@+id/spinnerTag" android:layout_height="wrap_content" android:layout_width="275dip"></Spinner>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:id="@+id/tableRow3" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:id="@+id/lblDesc" android:text="Description : " android:layout_height="wrap_content" android:layout_gravity="center_vertical"></TextView>
            <EditText android:gravity="top" android:id="@+id/etDesc" android:layout_width="match_parent" android:layout_height="70dip" android:fadeScrollbars="false" android:layout_gravity="top"></EditText>
        </TableRow>
    </TableLayout>
    <Button android:layout_height="wrap_content" android:id="@+id/btnFinish" android:layout_width="wrap_content" android:layout_marginLeft="85dip" android:text="Finish"></Button>

</LinearLayout>
